package com.dafe.springdemo;

import org.springframework.context.support.ClassPathXmlApplicationContext;

public class AnnotationBeanScopesDemoApp {

	
	public static void main(String[] args) {
	
		//load spring config file
		
		ClassPathXmlApplicationContext context = 
				new ClassPathXmlApplicationContext("applicationContext.xml");
		
		
		//retrieve bean from spring container
		
		Coach theCoach = context.getBean("tennisCoach", Coach.class);

		Coach alphaCoach = context.getBean("alphaCoach", Coach.class);

	
		//check if they refer to the same object
		boolean result = (theCoach == alphaCoach)
		
				//print out results
				System.out.println("\nPointing to the same result : " + result);
				
		//close context
		context.close();
	}
	
}
